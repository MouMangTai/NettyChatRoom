<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moumangtai.demo.mapper.AllChatMapper">
    <select id="getAllChatByPage" parameterType="java.lang.Integer" resultType="com.moumangtai.demo.entity.AllChat">
        select * from all_chat
        where
            id
            in
            (
            select t.id from
            (
            select id from all_chat
            order by id desc
            limit #{PageSize}
            )
            as t
            )
        order by id
    </select>
</mapper>
